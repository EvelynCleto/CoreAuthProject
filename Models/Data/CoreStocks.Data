using Microsoft.EntityFrameworkCore;

namespace CoreStocks.Data
{
    public class ApplicationDbContext : DbContext
    {
        public ApplicationDbContext(DbContextOptions<ApplicationDbContext> options)
            : base(options)
        {
        }

        public DbSet<Models.Account> Accounts { get; set; }

        public DbSet<Models.ProtectedResource> ProtectedResources { get; set; }

        protected override void OnModelCreating(ModelBuilder modelBuilder)
        {
            base.OnModelCreating(modelBuilder);

            // Configuração da tabela de Account
            modelBuilder.Entity<Models.Account>()
                .HasKey(a => a.Id);
            modelBuilder.Entity<Models.Account>()
                .HasIndex(a => a.Username)
                .IsUnique();

            // Configuração da tabela de ProtectedResource
            modelBuilder.Entity<Models.ProtectedResource>()
                .HasKey(p => p.Id);
        }
    }
}
